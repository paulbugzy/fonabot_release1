# Node Environment
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_HOST=your-db-host
DATABASE_PORT=5432
DATABASE_USERNAME=dbuser
DATABASE_PASSWORD=your-secure-password
DATABASE_NAME=fonabot_prod
DATABASE_SSL=true

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key
JWT_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Security
MASTER_ENCRYPTION_KEY=your-64-character-hex-encryption-key
ALLOWED_ORIGINS=https://fonabot.com,https://www.fonabot.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Optional Default Provider Credentials (if needed)
DEFAULT_TWILIO_ACCOUNT_SID=your-account-sid
DEFAULT_TWILIO_AUTH_TOKEN=your-auth-token
DEFAULT_TWILIO_PHONE_NUMBER=your-phone-number